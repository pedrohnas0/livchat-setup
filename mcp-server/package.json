{
  "name": "@pedrohnas/livchat-setup-mcp",
  "version": "0.2.7",
  "description": "MCP Server for LivChatSetup - Infrastructure orchestration via AI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "livchat-setup-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"import('fs').then(fs => fs.chmodSync('dist/index.js', '755'))\"",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "npm run build && tsc -p tsconfig.e2e.json && node dist/tests/e2e/test_mcp_e2e_workflow.js",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "livchat",
    "infrastructure",
    "orchestration",
    "hetzner",
    "docker",
    "ai",
    "modelcontextprotocol"
  ],
  "author": "Pedro Nascimento <team@livchat.ai>",
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.7.2"
  }
}
